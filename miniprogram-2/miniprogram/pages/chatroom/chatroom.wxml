<view class="chatroom">
  <!-- 聊天记录 -->
  <scroll-view scroll-y class="body">
    <view wx:for="{{chats}}" wx:key="{{item._id}}" class="message {{openId == item.id ? 'message__self' : ''}}">
      <image class="avatar" src="{{serverUrl}}{{item.avatar}}" mode="scaleToFill"></image>
      <view class="main">
        <view class="nickname">{{item.nickName}}</view>
        <view class="text-wrapper">
          <view class="text-content">{{item.textContent}}</view>
        </view>
      </view>
    </view>
  </scroll-view>

  <!-- 输入框、登录授权 -->
  <view class="footer">
    <view class="message-sender" wx:if="{{!userInfo}}">
      <button open-type="getUserInfo" 
      bindgetuserinfo="onGetUserInfo" 
      class="userinfo">请登录后参加聊天</button>
    </view>

    <view class="message-sender" wx:if="{{userInfo}}">
      <input class="text-input" placeholder="请输入" 
      bindinput="onTextInput" 
      value="{{textInputValue}}"></input>
      <button class="send-btn" bindtap="onSend">发送</button>
    </view>
  </view>
</view>