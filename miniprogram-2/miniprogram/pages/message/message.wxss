.item{
  height: 70px;
  background-color: #eee;
  display: flex;
  color: #000;
  border-radius: 10px;
  margin-bottom: 10px;
}
.item view{
  width: 100%;
   position: relative;
}
.item text{
  display: block;
}
.item-right{
  position: absolute;
  top: 10px;
  right: 10px;
  font-size: 10px;
  color: #000;
}
.item-top{
  width: 100%;
  padding-top: 8px;
  font-size: 14px;
  font-weight: bolder;
  color: red;
  height: 28px;
}
.item-bottom{
  width: 90%;
  font-size: 10px;
  font-weight: bolder;
  color: #aaa;
  height: 27px;
  overflow: hidden;
}
.item image{
  height: 60px;
  width: 70px;
  border-radius: 5px;
  margin: auto 10px;
}
.select{
  position: relative;
  background-color: red;
  height: 60px;
  width: 100%;
  border-radius: 10px;
  display: flex;
  margin-top: 5px;
  margin-bottom: 5px;
}
.select image{
  height: 60px;
  width: 60px;
  margin: 0 20px;
}
.select view{
  font-weight: bold;
  color: yellow;
  font-size: 25px;
  line-height: 60px;
}
.select-right{
  top: 0;
  bottom: 0;
  margin: auto 0;
  background-color: white;
  height: 35px;
  width: 35px;
  border-radius: 50%;
  position: absolute;
  right: 70px;
  display: block;
  font-weight: bold;
  color: red;
  font-size: 20px;
  line-height: 35px;
  text-align: center;
}
.select-left{
  position: absolute;
  right: 20px;
  display: block;
  font-weight: bold;
  color: #fff;
  font-size: 20px;
  line-height: 60px;
  text-align: center;
}