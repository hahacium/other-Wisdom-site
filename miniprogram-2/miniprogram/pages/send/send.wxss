.body{
  width: 100%;
  height: 100vh;
  background-color: #ddd;
}
.header{
  background-color: #fff;
  padding-left: 10px;
  padding-top: 10px;
  padding-bottom: 15px;
  display: flex;
  width: 100%;
  height: 95px;
  border-bottom: 1px solid #bbb;
}
.header image{
  width: 80px;
  height: 80px;
  border-radius: 5px;
}
.header-top{
  height: 40px;
  margin-left: 20px;
  display: block;
 font-size: 20px;
 font-weight: bold;

}
.header-bottom{
 margin-left: 20px;
 display: block;
 font-size: 15px;
 color: #bbb;
}
.item{
  background-color: #fff;
  height: 50px;
  line-height: 50px;
  padding-left: 10px;
  border-bottom: 1px solid #ccc;
}
.item text{
  display: block;
  float: right;
  margin-right: 20px;
}
.foot{
  background-color: green;
  width: 100%;
  bottom: 0;
  position: fixed;
  height: 60px;
  text-align: center;
  line-height: 60px;
}
.foot image{
  vertical-align: middle;
  height: 25px;
  width: 25px;
}
.foot text{
  color: #fff;
  font-size: 20px;
  vertical-align: middle;
} 