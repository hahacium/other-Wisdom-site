.header{
  border-top: solid 1px #fff;
  background-color: #3bade6;
  height: 100vh;
  box-sizing: border-box;
}
.txt{
  position: relative;
  margin-top: 20px;
  display: flex;
  width: 100%;
}
input{
  font-size: 13px;
  margin-left: 10%;
  background-color: #fff;
  width: 80%;
  padding: 2px 35px 2px 30px;
  height: 40px;
  border-radius: 18px;
  box-sizing: border-box;
}
button{
  margin-top: 20px;
  border-radius: 20px;
  line-height: 45px;
  height: 45px;
  width: 80%;
}
.img{
  padding-top: 20px;
  text-align: center;
  width: 100%;
}
.img image{
  height: 100px;
  width: 100px;
}
.password{
  height: 34px;
}
.eyes{
  top: 9px;
  position: absolute;
  right: 12%;
  height: 22px;
  width: 22px;
}
.images{
  top: 9px;
  left: 12%;
  position: absolute;
  height: 20px;
  width: 18px;
}
